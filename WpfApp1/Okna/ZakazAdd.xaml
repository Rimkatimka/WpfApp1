<Window x:Class="WpfApp1.Okna.ZakazAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Okna"
        mc:Ignorable="d"
        Title="ZakazAdd" Height="750" Width="400">
    <Grid>
        <StackPanel>

            <TextBlock Text="Артикул" FontSize="18" Margin="10"/>
            <ComboBox x:Name="ComboBoxArticul"  Height="40" DisplayMemberPath="Articul"/>
            <!--<TextBox x:Name="TextBoxArticul"  Height="40"/>-->

            <TextBlock Text="Статус заказа" FontSize="18" Margin="10"/>
            <ComboBox x:Name="ComboBoxStatus"  Height="40" DisplayMemberPath="Status"/>


            <TextBlock Text="Адресc пункта выдачи" FontSize="18" Margin="10"/>
            <ComboBox x:Name="ComboBoxAddress"  Height="40" DisplayMemberPath="Address"/>

            <TextBlock Text="Дата заказа" FontSize="18" Margin="10"/>
            <DatePicker Name="DPDateOrder" Height="40"/>

            <TextBlock Text="Дата доставки" FontSize="18" Margin="10"/>
            <DatePicker Name="DPDateDilivery" Height="40"/>

            <Button x:Name="ButtonSave" Content="Сохранить" Height="40" Margin="10" Style="{StaticResource dd}" Click="ButtonSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
