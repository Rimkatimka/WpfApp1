<Window x:Class="WpfApp1.Okna.viewing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Okna"
        mc:Ignorable="d"
        Title="Просмотр товаров" Height="800" Width="800" MinHeight="600" MinWidth="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#7FFF00">

            <TextBlock Text="Просмотр товаров" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" >
                <TextBlock Text="ФИО пользователя" Margin="10"/>
                <Button Content="Выход" Style="{StaticResource dd}" Width="80" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Background="#f0fff0" Margin="10">
            <TextBlock Text="Фильтры" FontSize="18" Margin="10"/>
            <TextBlock Text="Категория" Margin="10" FontSize="18"/>
            
            <ComboBox x:Name="ComboBoxCategory" Height="30" SelectionChanged="FilterCatChanged" DisplayMemberPath="Category" SelectedIndex="2"/>

            <TextBlock Text="Производитель" Margin="10" FontSize="18"/>
            <ComboBox x:Name="ComboBoxCreator" Height="30" SelectionChanged="FilterCreatChanged" DisplayMemberPath="Supplier" SelectedIndex="2"/>

            <TextBlock Text="Цена - сортировка" Margin="10" FontSize="18"/>
            <ComboBox x:Name="ComboBoxSort" Height="30">
                <ComboBoxItem Content="По умолчанию"/>
                <ComboBoxItem Content="По возрастанию цены"/>
                <ComboBoxItem Content="По убыванию цены"/>
            </ComboBox>

            <TextBlock Text="Поиск по названию" Margin="10" FontSize="18"/>
            <TextBox x:Name="TextBoxSearch" TextChanged="TextChanged"/>

            <Button Style="{StaticResource dd}" Margin="10" Content="Применить" Height="40" Click="ApplyFilters_Click"/>
            <Button Style="{StaticResource dd}" Margin="10" Content="Сбросить" Height="40" Click="ResetFilters_Click"/>
        </StackPanel>
        <ListView Grid.Row="1" Grid.Column="1" x:Name="ListTovars" HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="3" BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Border Margin="7,5" BorderThickness="3" BorderBrush="Black" Grid.Column="0">
                                <Image Stretch="Uniform" Source="{Binding Image}" Height="200" Width="300"/>
                            </Border>
                            <Border Margin="7,5" BorderThickness="3" BorderBrush="Black" Grid.Column="1" Background="{Binding Cvet}">

                                <StackPanel >
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Category}" FontWeight="Bold" FontSize="25"/>
                                        <TextBlock Text=" | " FontWeight="Bold" FontSize="25"/>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="25"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description, StringFormat={} Описание товара: {0} }" FontSize="15" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Creator, StringFormat={} Производитель: {0}}" FontSize="15"/>
                                    <TextBlock Text="{Binding Supplier, StringFormat={} Поставщик: {0}}" FontSize="15"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text=" Цена: " FontSize="15"/>
                                        <TextBlock Text="{Binding Cost}" TextDecorations="{Binding Linia}" Foreground="{Binding Krasn}" FontSize="15"/>
                                        <TextBlock Text="{Binding CostNew, StringFormat={} Новая Цена: {0}}" Visibility="{Binding Vidno}" FontSize="15"/>
                                    </StackPanel>

                                    <TextBlock Text="{Binding UI, StringFormat={} Единица измерения: {0}}" FontSize="15"/>
                                    <TextBlock Text="{Binding Count, StringFormat={} Количество на складе: {0}}" FontSize="15" />

                                </StackPanel>
                            </Border>
                            <Border Margin="7,5" BorderThickness="3" BorderBrush="Black" Grid.Column="2">
                                <TextBlock Text="{Binding Sale}" FontSize="30"/>
                            </Border>
                        </Grid>

                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </Grid>
</Window>
