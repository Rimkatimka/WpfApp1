<Window x:Class="WpfApp1.Okna.viewing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Okna"
        mc:Ignorable="d"
        Title="Просмотр товаров" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#7FFF00">

            <TextBlock Text="Просмотр товаров" HorizontalAlignment="Center" FontSize="20" TextWrapping="Wrap"/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" >
                <TextBlock Text="ФИО пользователя" Margin="10"/>
                <Button Content="Выход" Style="{StaticResource dd}" Width="80" Margin="10" Click="Button_Click"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Background="#f0fff0" Margin="10">
            <TextBlock Text="Фильтры" FontSize="15" Margin="10"/>
            <TextBlock Text="Категория" Margin="10" FontSize="10"/>
            <ComboBox />
            <TextBlock Text="Производитель" Margin="10" FontSize="10"/>
            <ComboBox />

            <TextBlock Text="Цена - сортировка" Margin="10" FontSize="10"/>
            <ComboBox />

            <TextBlock Text="Поиск по названю" Margin="10" FontSize="10"/>
            <TextBox />

            <Button Style="{StaticResource dd}" Margin="10" Content="Применить"/>
            <Button Style="{StaticResource dd}" Margin="10" Content="Сбросить"/>
        </StackPanel>
    </Grid>
</Window>
