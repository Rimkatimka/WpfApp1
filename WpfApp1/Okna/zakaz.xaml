<Window x:Class="WpfApp1.Okna.zakaz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Okna"
        mc:Ignorable="d"
        Title="zakaz" Height="450" Width="800" MinHeight="450" MinWidth="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#7FFF00">

            <TextBlock Text="Список заказов" HorizontalAlignment="Center" FontSize="30" TextWrapping="Wrap" VerticalAlignment="Center"/>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" >
                <TextBlock Text="ФИО пользователя" Margin="10" FontSize="18" VerticalAlignment="Center"/>
                <Button Content="Назад" Style="{StaticResource dd}" Width="80" Margin="10" Click="Button_Click" FontSize="18"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1" Background="#f0fff0" Margin="10">


            <Button Style="{StaticResource dd}" Margin="10" Content="Добавить" Height="30" Click="AddButtonClick"/>
            <Button Style="{StaticResource dd}" Margin="10" Content="Редактировать" Height="30" Click="AddButtonClick"/>
            <Button Style="{StaticResource dd}" Margin="10" Content="Удаление" Height="30" Click="DeleteButtonc"/>
        </StackPanel>
        <ListView Grid.Row="1" Grid.Column="1" x:Name="ZakazList" HorizontalContentAlignment="Stretch" MouseDoubleClick="ZakazList_MouseDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="3" BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>                            
                            <Border Margin="7,5" BorderThickness="3" BorderBrush="Black" Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="{Binding Articul, StringFormat={} Артикул заказа: {0}}" FontWeight="Bold" FontSize="15"/>
                                    <TextBlock Text="{Binding Orders.Status, StringFormat={} Статус заказа: {0}}" FontSize="15"/>
                                    <TextBlock Text="{Binding Orders.AddressDilivery, StringFormat={} Адресс пункта выдачи: {0}}" FontSize="15"/>
                                    <TextBlock Text="{Binding Orders.DateOrder, StringFormat={} Дата заказа: {0}}" FontSize="15"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Margin="7,5" BorderThickness="3" BorderBrush="Black" Grid.Column="1">
                                <TextBlock Text="{Binding Orders.DateDilivery}" FontSize="30"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
